drop table client;

CREATE TABLE client (
  appointment_id INTEGER NOT NULL GENERATED ALWAYS AS IDENTITY (START WITH 1, INCREMENT BY 1) PRIMARY KEY, 
  patient_name VARCHAR(100) NOT NULL WITH DEFAULT ' ' , 
  patient_password VARCHAR(50) NOT NULL WITH DEFAULT ' ' , 
  patient_email VARCHAR(50) NOT NULL WITH DEFAULT ' ' , 
  doctor_name VARCHAR(100) NOT NULL WITH DEFAULT ' ' , 
  appointment_type VARCHAR(50) NOT NULL WITH DEFAULT ' ' , 
  appointment_date DATE NOT NULL WITH DEFAULT '2001-01-01' , 
  description VARCHAR(200) NOT NULL WITH DEFAULT ' ' ) ;
  
  
ALTER TABLE CLIENT DROP COLUMN description;

ALTER TABLE CLIENT ADD description varchar(250) NOT NULL WITH DEFAULT ' ';

SELECT * FROM CLIENT;